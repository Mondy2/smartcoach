<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rounded_container_blue"
    android:padding="16dp">

    <!-- Зображення групи м’язів -->
    <ImageView
        android:id="@+id/muscleImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:contentDescription="Зображення групи м’язів"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Назва групи м’язів -->
    <TextView
        android:id="@+id/muscleGroupText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Груди"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/muscleImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Дата тренування -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2025-04-23"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/muscleGroupText"
        app:layout_constraintStart_toEndOf="@id/muscleImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ціль тренування -->
    <TextView
        android:id="@+id/goalText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ціль: Схуднення"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        app:layout_constraintStart_toEndOf="@id/muscleImage"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>