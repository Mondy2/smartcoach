<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rounded_container_blue"
    android:padding="16dp">

    <!-- Изображение группы мышц -->
    <ImageView
        android:id="@+id/muscleImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:contentDescription="Muscle group image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Название группы мышц -->
    <TextView
        android:id="@+id/muscleGroupText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chest"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/light_blue"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/muscleImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Дата тренировки -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2025-04-23"
        android:textSize="14sp"
        android:textColor="@color/light_blue"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/muscleGroupText"
        app:layout_constraintStart_toEndOf="@id/muscleImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Цель тренировки -->
    <TextView
        android:id="@+id/goalText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Goal: Muscle Gain"
        android:textSize="14sp"
        android:textColor="@color/light_blue"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        app:layout_constraintStart_toEndOf="@id/muscleImage"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>