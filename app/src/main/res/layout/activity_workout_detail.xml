<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#1E1F26">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0E1F9"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0E1F9"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDetailSuggested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0E1F9"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intensity:"
            android:textColor="#D0E1F9"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tvDetailIntensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0E1F9"/>

        <TextView
            android:text="Sets:"
            android:textColor="#D0E1F9"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/tvDetailSets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0E1F9"/>

        <TextView
            android:text="Duration (min):"
            android:textColor="#D0E1F9"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/tvDetailDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0E1F9"/>

    </LinearLayout>
</ScrollView>