<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1E1F26">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Workout"
        android:textColor="#D0E1F9"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness Goal:"
        android:textColor="#D0E1F9"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/fitnessGoalSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#283655"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training Mode:"
        android:textColor="#D0E1F9"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/trainingModeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#283655"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/generateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Workout"
        android:backgroundTint="#283655"
        android:textColor="#D0E1F9"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/workoutResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#D0E1F9"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="#4D648D"
        android:layout_marginTop="8dp"/>

</LinearLayout>