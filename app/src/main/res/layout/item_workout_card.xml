<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_container_blue"
        android:padding="16dp">

        <!-- Muscle Group Image -->
        <ImageView
            android:id="@+id/muscle_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_workout"
            android:contentDescription="Muscle group image" />

        <!-- Program Title -->
        <TextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ВСЁ ТЕЛО ПРОГРАММА 7X4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/light_blue"
            android:layout_marginTop="8dp" />

        <!-- Program Description -->
        <TextView
            android:id="@+id/workout_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Научите своё тело к идеальной фигуре, трениру всё группы мышцы и создавай своё тело мечты за 4 недели!"
            android:textSize="14sp"
            android:textColor="@color/light_blue"
            android:layout_marginTop="8dp" />

        <!-- Start Button -->
        <Button
            android:id="@+id/start_workout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="НАЧАЛО"
            android:textColor="@color/dark_gray"
            android:background="@drawable/rounded_button_blue"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>